<h1>Uncover the secrets of our Licornes</h1>


<div class="container">
    <% @licornes.each do |licorne| %>
      <div class="card-licorne">
        <div class="licorne-img">
          <%= image_tag "licorne01.jpg" %>
        </div>

        <div class="licorne-infos">
           <li><strong>NAME:</strong> <%= licorne.name %></li>
           <li><strong>AGE:</strong> <%= licorne.age %> years old</li>
           <li><strong>SUPERPOWER:</strong> <%= licorne.superpower %></li>
           <li><strong>ADDRESS:</strong> <%= licorne.user.address %></li>
        </div>

        <div class="btn">
          <%= link_to "#{licorne.price}€", licorne_path(licorne) %>
        </div>
      </div>
    <% end %>
</div>

  <%= link_to "Register my licorne", new_licorne_path %>



